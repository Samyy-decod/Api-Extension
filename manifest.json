{
    "manifest_version": 3,
    "name": "API Tester",
    "version": "1.0",
    "description": "Test APIs with different methods and view responses in multiple formats.",
    "permissions": ["activeTab", "scripting"],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon48.png"
    },
    
    "host_permissions": ["<all_urls>"]
  }
  